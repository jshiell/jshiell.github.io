<!doctype html>
<html lang="{{ metadata.language }}" class="bg-{{ backgroundcolour or 'teal' }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}">

    <meta name="generator" content="{{ eleventy.generator }}">

    <link rel="stylesheet" href="{{ '/css/index.css' | url }}">

    <link rel="me" href="https://indieweb.social/@jsh">
  </head>
  <body>
    <header>
      <div>
        <h1 class="home"><a href="{{ '/' | url }}" title="Return to the home page">{{ metadata.title }}</a></h1>

        {#- Read more about `eleventy-navigation` at https://www.11ty.dev/docs/plugins/navigation/ #}
        <ul class="nav">
        {%- for entry in collections.all | eleventyNavigation %}
          <li class="nav-item{% if entry.url == page.url %} nav-item-active{% endif %}"><a href="{{ entry.url | url }}">{{ entry.title }}</a></li>
        {%- endfor %}
        </ul>
      </div>
    </header>

    <main{% if templateClass %} class="{{ templateClass }}"{% endif %}>
      <div>
        {{ content | safe }}
      </div>
    </main>

    <footer>
      <div>
        <div>
          &copy; James Shiell | Licensed under <a href="https://blog.cavelab.dev/about/#license" title="Creative Commons Attribution-ShareAlike 4.0 Internation Licence">CC BY-SA 4.0</a>
        </div>
        <div>
          {% if githubSha %}
          Release  <a href="{{ githubServerUrl }}/{{ githubRepository }}/commit/{{ githubSha }}" title="Source code for this website">{{ githubSha | truncate(7, true, '') }}</a>
          {% else %}
          Dev
          {% endif %} |
          Powered by <a href="https://www.11ty.dev/" title="The Eleventy static site generator">Eleventy</a> and <a href="https://pages.github.com/">GitHub Pages</a>
        </dev>
      </div>
    </footer>

    <!-- Current page: {{ page.url | url }} -->
  </body>
</html>
